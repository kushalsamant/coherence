{
  "name": "kvshvl-platform",
  "version": "1.0.0",
  "private": true,
  "description": "KVSHVL Platform Monorepo - Unified platform for ASK, Sketch2BIM, and Reframe",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "vercel-build": "git submodule update --init --recursive || true && next build",
    "start": "next start",
    "lint": "next lint",
    "build:workspaces": "npm run build --workspaces",
    "dev:workspaces": "npm run dev --workspaces --if-present",
    "test:workspaces": "npm run test --workspaces --if-present",
    "lint:workspaces": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kushalsamant/kushalsamant.github.io.git"
  },
  "author": "Kushal Samant",
  "license": "MIT",
  "dependencies": {
    "@auth/upstash-redis-adapter": "^2.11.1",
    "@kushalsamant/design-template": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@upstash/redis": "^1.35.6",
    "axios": "^1.6.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.6.1",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "groq-sdk": "^0.34.0",
    "lucide-react": "^0.552.0",
    "micro": "^10.0.1",
    "next": "15.1.4",
    "next-auth": "5.0.0-beta.30",
    "razorpay": "^2.9.2",
    "react": "^18.3.1",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "recharts": "^2.10.0",
    "socket.io-client": "^4.6.1",
    "tailwind-merge": "^3.3.1",
    "three": "^0.160.0",
    "three-stdlib": "^2.28.0",
    "web-ifc": "^0.0.51",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/micro": "^7.3.7",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.160.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.0",
    "eslint-config-next": "^15.1.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
