{
  "dashboard": {
    "title": "Sketch2BIM - System Health",
    "tags": ["sketch2bim", "system"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(sketch2bim_api_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(sketch2bim_api_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "legendFormat": "p95 - {{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(sketch2bim_api_requests_total{status_code=~\"5..\"}[5m]))",
            "legendFormat": "5xx Errors"
          }
        ]
      },
      {
        "id": 4,
        "title": "Queue Size",
        "type": "graph",
        "targets": [
          {
            "expr": "sketch2bim_queue_size",
            "legendFormat": "{{queue_type}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Replicate API Calls",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(sketch2bim_replicate_api_calls_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "CDN Uploads",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(sketch2bim_cdn_uploads_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
}

