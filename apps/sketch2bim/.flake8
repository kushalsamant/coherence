[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    alembic/versions,
    node_modules
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
extend-ignore =
    # Allow longer lines in certain contexts
    F401,  # unused imports (often intentional for type checking)
per-file-ignores =
    __init__.py:F401

